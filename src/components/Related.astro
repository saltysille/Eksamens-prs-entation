<div class="tekst">
  <h3>RELATEREDE PRODUKTER</h3>
</div>
<section class="image-grid">
  {
    data
      .filter((item) => [5, 7, 13, 14].includes(item.id))
      //1. data.filter((item) => [5, 7, 13, 14].includes(item.id)): 
        //Dette filtrerer datasættet ved kun at inkludere elementer, 
        //hvis id-attributten matcher en af de specificerede værdier (5, 7, 13 eller 14).

      //2. <a href={/products/${item.slug}}>: 
        //Dette opretter en anker-tag (<a>) med en URL baseret på elementets slug = det der står url'en.

      // 3. <img class="image" src={item.image} alt={item.alttext} />: Dette opretter et billede 
        //(<img>) med klassen "image", hvor kilden (src) og alternativ tekst (alt) er hentet fra elementet i datasættet.

      // 5. <div class="item-info"> ... </div>: 
        //Dette opretter en container med klassen "item-info" og indeholder yderligere information om elementet.

      //6. <button className="btn" type="button" name="btn" key={item.slug}> ... </button>: 
        //Dette opretter en knap (<button>) med klassen "btn" og et unikt nøgleværdi baseret på elementets slug.

      // 7. <button className="btn" type="button" name="btn" key={item.slug}> ... </button>: 
        //Dette opretter en knap (<button>) med klassen "btn" og et unikt nøgleværdi baseret på elementets slug.
          
          .map((item) => (
        <div class="grid-item" key={item.slug}>
          <a href={`/products/${item.slug}`}> 
            <img class="image" src={item.image} alt={item.alttext} />
          </a>
          <div class="item-info">
            <a href={`/products/${item.slug}`}>
              <h4>{item.brand_front}</h4>
            </a>
            <p>{item.price}</p>
            <button className="btn" type="button" name="btn" key={item.slug}>
              <a class="knap" href={`/products/${item.slug}`}>
                <p>SHOP</p>
              </a>
            </button>
          </div>
        </div>
      ))
  }
</section>

